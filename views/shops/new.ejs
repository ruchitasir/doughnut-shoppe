<h1>Add New Shop</h1>

<div class="row">
  <form method="POST" action="/shops" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input id="name" type="text" class="validate" name="name">
        <label for="name">Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="specialty" type="text" class="validate" name="specialty">
        <label for="specialty">Specialty</label>
      </div>
      <div class="range-field col s6">
        <input id="rating" type="range" min="0" max="5" step="0.5" name="rating">
        <label for="rating">Star Rating</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="address" type="text" class="validate" name="address">
        <label for="address">Address</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="image" type="url" class="validate" name="image">
        <label for="image">Image URL</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="description" class="validate materialize-textarea" name="description"></textarea>
        <label for="description">Description</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light teal lighten-3" type="submit">Log Me In
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
